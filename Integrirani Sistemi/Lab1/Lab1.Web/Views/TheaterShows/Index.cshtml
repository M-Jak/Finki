@model ICollection<Lab1.Web.Models.Domain.TheaterShow>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@for(int i=0;i<Model.Count; i++)
    {
    var item = Model.ElementAt(i);
    if(i % 4 == 0)
        {
            @:<div class="row">
        }
        <div class="col-3 md-4">

            <div class="card" style="width: 18rem; height: 35rem; max-height: 50rem">
                <img class="card-img-top" src="@item.ImageUrl" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text">Date: @item.ShowDate</p>
                </div>
                <div class="card-footer">
                    <a asp-controller="TheaterShows" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                    <a asp-controller="TheaterShows" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-info">Delete</a>
                </div>

            </div>
        </div>

        if(i % 4 == 3)
        {
            @:</div>
        }
    }