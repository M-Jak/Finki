@using IntegratedSystems.Domain.Domain_Models
@model IntegratedSystems.Domain.Domain_Models.VaccinationCenter

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>VaccinationCenter</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaxCapacity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaxCapacity)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a> |
    <a asp-action="AddVaccine" asp-route-id="@Model?.Id">Add Vaccine</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Manufacturer
            </th>
            <th>
                Certificate
            </th>
            <th>
                DateTaken
            </th>
            <th>
                Patient Name
            </th>
            <th>
                Patient Surname
            </th>
            <th>
                Patient Email
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewData["Vaccines"] as IList<Vaccine>)
        {
            <tr>
                <td>
                    @item.Manufacturer
                </td>
                <td>
                    @item.Certificate
                </td>
                <td>
                    @item.DateTaken
                </td>
                <td>
                    @item.PatientFor?.FirstName
                </td>
                <td>
                    @item.PatientFor?.LastName
                </td>
                <td>
                    @item.PatientFor?.Email
                </td>
            </tr>
        }
    </tbody>
</table>