@model IntegratedSystems.Domain.DTO.VaccineDTO;

<div class="container">
    
    <form method="post" asp-action="AddVaccineToVaccinationCenter">
        <input type="hidden" asp-for="VaccinationCenter" value="@Model.VaccinationCenter" />

        <div class="form-group">
            <select asp-for="PatientIdFor" class="form-control" required>
                <option value="">Please Select a Patient</option>
                @if(Model.AllPatients != null)
                {
                    foreach(var item in Model.AllPatients)
                    {
                        <option value="@item.Id">@item.FirstName</option>
                    }
                }
            </select>
            <select asp-for="Manufacturer" class="form-control" required>
                <option value="">Please Select a Manufacturer</option>
                @if (Model.AllManufacturers != null)
                {
                    foreach (var item in Model.AllManufacturers)
                    {
                        <option value="@item">@item</option>
                    }
                }
            </select>
            <button type="submit" class="btn btn-success">Add Vaccine to Patient</button>
        </div>
    </form>

</div>