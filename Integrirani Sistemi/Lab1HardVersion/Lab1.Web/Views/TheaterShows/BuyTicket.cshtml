@model Lab1.Web.Models.Domain.Ticket

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ticket</h1>

<div class="row">
    <div class="col-4">

        <form asp-action="BuyTicketConfirmed">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="TheaterShowId" />
            <input type="hidden" asp-for="UserId" />

            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" value="100" contenteditable="false" />
            </div>
            <div class="form-group">
                <input type="submit" value="Buy ticket" class="btn-info" />
            </div>
        </form>
    </div>
</div>