@model IntegratedSystems.Domain.DTO.PatientDetailsDTO

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Patient</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.patient.Embg)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.patient.Embg)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.patient.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.patient.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.patient.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.patient.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.patient.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.patient.PhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.patient.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.patient.Email)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.patient.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<table class="table">
    <thead>
    <th>
        #
    </th>
    <th>
        Date taken
    </th>

    <th>
        Center
    </th>

    <th>
        Certificate
    </th>
    </thead>
    <tbody>
        @for(int i = 0; i < Model.vaccines.Count; i++) {
            <tr>
                <td>
                    @(i + 1)
                </td>
                <td>
                    @Html.DisplayFor(item => Model.vaccines[i].DateTaken)
                </td>
                <td>
                    @Html.DisplayFor(item => Model.vaccines[i].Center.Name)
                </td>
                <td>
                    @Html.DisplayFor(item => Model.vaccines[i].Certificate)
                </td>
            </tr>
        }
    </tbody>
</table>
