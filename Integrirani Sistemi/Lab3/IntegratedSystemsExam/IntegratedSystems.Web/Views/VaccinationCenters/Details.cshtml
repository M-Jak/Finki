@model IntegratedSystems.Domain.DTO.CenterDetailsDTO

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>VaccinationCenter</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.center.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.center.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.center.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.center.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.center.MaxCapacity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.center.MaxCapacity)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.center.Id">Edit</a> |
    <a asp-action="VaccinePatient" asp-route-id="@Model.center.Id">Vaccine patient</a> |
    <a asp-action="Index">Back to List</a>
</div>

<table class="table">
    <thead>
        <th>
            #
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>

        <th>
            Date taken
        </th>

        <th>
            Center
        </th>

        <th>
            Certificate
        </th>
    </thead>
    <tbody>
        @for(int i=0; i < Model.vaccines.Count;i++) {
            <tr>
                <td>
                    @(i+1)
                </td>
                <td>
                    @Html.DisplayFor(item => Model.vaccines[i].PatientFor.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(item => Model.vaccines[i].PatientFor.LastName)
                </td>
                <td>
                    @Html.DisplayFor(item => Model.vaccines[i].DateTaken)
                </td>
                <td>
                    @Html.DisplayFor(item => Model.center.Name)
                </td>
                <td>
                    @Html.DisplayFor(item => Model.vaccines[i].Certificate)
                </td>
            </tr>
        }
    </tbody>
</table>

